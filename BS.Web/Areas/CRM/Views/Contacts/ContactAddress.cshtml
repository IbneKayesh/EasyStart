@model IEnumerable<BS.DMO.Models.CRM.CONTACT_ADDRESS>
@{
    ViewData["Title"] = "Contact Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Find your @ViewData["Title"]</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-xs btn-primary"><i class="fa fa-chevron-left"></i> Back</a>
            @if(Model.Count() > 0)
            {
                <a class="btn btn-primary btn-xs" asp-area="CRM" asp-controller="Contacts" asp-action="CreateContactAddress" asp-route-contactId="@Model.First().CONTACT_ID"><i class="fa fa-plus"></i> Add New Address</a>
            }
        </div>
    </div>

    <div class="card-body table-responsive">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Person</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Office</th>
                    <th>Default</th>
                    <th>Status</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CONTACT_PERSON)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CONTACT_NO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EMAIL_ADDRESS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OFFICE_ADDRESS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_DEFAULT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_ACTIVE)
                        </td>
                        <td>
                            <a class="btn btn-primary btn-xs" asp-action="EditContactAddress" asp-route-id="@item.ID"><i class="fa fa-edit"></i> Edit</a>
                            <button type="button" class="btn btn-danger btn-xs delete-confirm" data-url="DeleteContactAddress/@item.ID"><i class="fa fa-trash"></i> Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>