@model IEnumerable<BS.DMO.ViewModels.Inventory.ITEM_SUB_GROUP_VM>
@{
    ViewData["Title"] = "Item Sub Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Find your @ViewData["Title"]</h3>
        <div class="card-tools">
            <a class="btn btn-primary btn-xs" asp-action="Create"><i class="fa fa-plus"></i> Create New</a>
        </div>
    </div>

    <div class="card-body table-responsive">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Item Group Name</th>
                    <th>Sub Group Name</th>
                    <th>Description</th>
                    <th>FG/RM</th>
                    <th>Generate Stock</th>
                    <th>HS Code</th>
                    <th>Code Prefix</th>
                    <th>Lead Days</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ITEM_GROUP_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ITEM_SUB_GROUP_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ITEM_SUB_GROUP_DESC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_FG_RM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_STOCK)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HS_CODE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CODE_PREFIX)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LEAD_DAYS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ITEM_SUB_GROUP_IMG)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_ACTIVE)
                        </td>
                        <td>
                            <a class="btn btn-primary btn-xs" asp-area="Setup" asp-controller="Department" asp-action="Index" asp-route-id="@item.ID"><i class="fa fa-eye"></i> Branch</a>
                            <a class="btn btn-primary btn-xs" asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i> Edit</a>
                            <button type="button" class="btn btn-danger btn-xs delete-confirm" data-url="/Inventory/ProductCategory/Delete/@item.ID"><i class="fa fa-trash"></i> Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>