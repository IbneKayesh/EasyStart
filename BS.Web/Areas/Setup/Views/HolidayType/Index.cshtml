@model IEnumerable<BS.DMO.Models.Setup.HOLIDAY_TYPE>
@{
    ViewData["Title"] = "Holiday Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Find your @ViewData["Title"]</h3>
        <div class="card-tools">
            <span class="btn btn-xs btn-primary" data-toggle="modal" data-target="#PartialPopModal" data-url="@Url.Action("Create", "HolidayType", new { area = "Setup" })" data-title="Create new @ViewData["Title"]" data-button="1">
                <i class="fas fa-plus"></i> Create New
            </span>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Application Required</th>
                    <th>Status</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HOLIDAY_TYPE_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_APPLICATION_REQUIRED)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_ACTIVE)
                        </td>
                        <td>
                            <a class="btn btn-primary btn-xs" asp-area="Setup" asp-controller="LeaveCalendar" asp-action="Index" asp-route-leaveType="@item.ID"><i class="fa fa-eye"></i> Holiday Calendar</a>
                            <span class="btn btn-xs btn-primary" data-toggle="modal" data-target="#PartialPopModal" data-url="@Url.Action("Edit", "HolidayType", new { area = "Setup", id = item.ID })" data-title="Edit @ViewData["Title"] - @item.HOLIDAY_TYPE_NAME" data-button="1">
                                <i class="fas fa-edit"></i> Edit
                            </span>
                            <button type="button" class="btn btn-danger btn-xs delete-confirm" data-url="/Setup/LeaveType/Delete/@item.ID"><i class="fa fa-trash"></i> Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>