@model BS.DMO.Models.Setup.BANK_INFO
@{
    ViewData["Title"] = "Bank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Add/Edit @ViewData["Title"]</h3>
        <div class="card-tools">
            <a class="btn btn-primary btn-xs" asp-action="Create"><i class="fa fa-plus"></i> Create New</a>
        </div>
    </div>
    <form asp-action="AddUpdate">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" type="hidden" />
            <input asp-for="RowVersion" type="hidden" />
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="BANK_NAME" class="control-label"></label>
                    <input asp-for="BANK_NAME" type="text" class="form-control form-control-sm" autocomplete="off" placeholder="Bank Name">
                    <span asp-validation-for="BANK_NAME" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="SHORT_NAME" class="control-label"></label>
                    <input asp-for="SHORT_NAME" type="text" class="form-control form-control-sm" autocomplete="off" placeholder="Short Name">
                    <span asp-validation-for="SHORT_NAME" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="CO_ADDRESS" class="control-label"></label>
                    <input asp-for="CO_ADDRESS" type="text" class="form-control form-control-sm" autocomplete="off" placeholder="Bank Address">
                    <span asp-validation-for="CO_ADDRESS" class="text-danger"></span>
                </div>
                <div class="col-md-1">
                    <label asp-for="IS_ACTIVE" class="control-label"></label>
                    <input asp-for="IS_ACTIVE" type="checkbox" class="form-control form-control-sm">
                    <span asp-validation-for="IS_ACTIVE" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-chevron-left"></i> Back</a>
            <button class="btn btn-sm btn-info" type="reset"><i class="fa fa-undo"></i> Reset</button>
            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Submit</button>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}