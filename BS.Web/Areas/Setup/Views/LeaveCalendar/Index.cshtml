@model IEnumerable<BS.DMO.ViewModels.Setup.LEAVE_CALENDAR_VM>
@{
    ViewData["Title"] = "Leave Calendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Find your @ViewData["Title"]</h3>
        <div class="card-tools">
            <a class="btn btn-primary btn-xs" asp-action="Create"><i class="fa fa-plus"></i> Create New</a>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Financial Year</th>
                    <th>Year No</th>
                    <th>Leave Type</th>
                    <th>Calendar Date</th>
                    <th>Is Working Day</th>
                    <th>Note</th>
                    <th>Status</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.YEAR_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FINANCIAL_YEAR_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LEAVE_TYPE_NAME)
                        </td>
                        <td>
                            @item.CALENDAR_DATE.ToString(item.DATE_DISPLAY_FORMAT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_WORKING_DAY)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NOTE_INFO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_ACTIVE)
                        </td>
                        <td>
                            <a class="btn btn-primary btn-xs" asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i> Edit</a>
                            <button type="button" class="btn btn-danger btn-xs delete-confirm" data-url="/Setup/LeaveCalendar/Delete/@item.ID"><i class="fa fa-trash"></i> Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>