@model BS.DMO.Models.Setup.FINANCIAL_YEAR
@{
    Layout = null;
}
<form asp-area="Setup" asp-controller="FinancialYear" asp-action="AddUpdate" id="partialForm" method="post" onkeydown="return event.key != 'Enter';">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="RowVersion" type="hidden" />
        <div class="row">
            <div class="col-md-1">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" type="text" class="form-control form-control-sm" autocomplete="off" placeholder="Enter Year" readonly="@ViewData["editmode"]">
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="YEAR_NAME" class="control-label"></label>
                <input asp-for="YEAR_NAME" type="text" class="form-control form-control-sm" autocomplete="off" placeholder="Year Name">
                <span asp-validation-for="YEAR_NAME" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="START_DATE" class="control-label"></label>
                <input asp-for="START_DATE" type="date" class="form-control form-control-sm" autocomplete="off" placeholder="Start Date">
                <span asp-validation-for="START_DATE" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="END_DATE" class="control-label"></label>
                <input asp-for="END_DATE" type="date" class="form-control form-control-sm" autocomplete="off" placeholder="End Date">
                <span asp-validation-for="END_DATE" class="text-danger"></span>
            </div>
            <div class="col-md-1">
                <label asp-for="IS_LOCKED" class="control-label"></label>
                <input asp-for="IS_LOCKED" type="checkbox" class="form-control form-control-sm">
                <span asp-validation-for="IS_LOCKED" class="text-danger"></span>
            </div>
            <div class="col-md-1">
                <label asp-for="IS_ACTIVE" class="control-label"></label>
                <input asp-for="IS_ACTIVE" type="checkbox" class="form-control form-control-sm">
                <span asp-validation-for="IS_ACTIVE" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
