@model IEnumerable<BS.DMO.ViewModels.Company.SUB_SECTIONS_VM>
@{
    ViewData["Title"] = "Sub Sections";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Find your @ViewData["Title"]</h3>
        <div class="card-tools">
            <a class="btn btn-primary btn-xs" asp-action="Create"><i class="fa fa-plus"></i> Create New</a>
        </div>
    </div>

    <div class="card-body table-responsive">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Section</th>
                    <th>Name</th>
                    <th>Short Name</th>
                    <th>Address</th>
                    <th>Contact</th>
                    <th>Contact No</th>
                    <th>Email</th>
                    <th>Max Employee</th>
                    <th>Max Salary</th>
                    <th>Status</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SECTION_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SUB_SECTION_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SHORT_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ADDRESS_INFO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CONTACT_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CONTACT_NO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EMAIL_ADDRESS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MAX_EMPLOYEE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MAX_SALARY)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_ACTIVE)
                        </td>
                        <td>
                            <a class="btn btn-primary btn-xs" asp-area="Setup" asp-controller="Department" asp-action="Index" asp-route-id="@item.ID"><i class="fa fa-eye"></i> Branch</a>
                            <a class="btn btn-primary btn-xs" asp-action="CreateBusinesLine" asp-route-id="@item.ID"><i class="fa fa-edit"></i> Create Busines Line</a>
                            <a class="btn btn-primary btn-xs" asp-action="IndexBusinesLine" asp-route-id="@item.ID"><i class="fa fa-list-alt"></i> Index Busines Line</a>
                            <a class="btn btn-primary btn-xs" asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i> Edit</a>
                            <button type="button" class="btn btn-danger btn-xs delete-confirm" data-url="BankInfo/Delete/@item.ID"><i class="fa fa-trash"></i> Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>