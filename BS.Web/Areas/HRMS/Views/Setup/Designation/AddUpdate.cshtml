@model BS.DMO.Models.HRMS.Setup.DESIGNATION
@{
    ViewData["Title"] = "Designation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Add/Edit @ViewData["Title"]</h3>
        <div class="card-tools">
            <a class="btn btn-primary btn-xs" asp-action="Create"><i class="fa fa-plus"></i> Create New</a>
        </div>
    </div>
    <form asp-action="AddUpdate">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" type="hidden" />
            <input asp-for="RowVersion" type="hidden" />
            <div class="row">
                <div class="col-md-1">
                    <label asp-for="SENIOR_LEVEL" class="control-label"></label>
                    <input asp-for="SENIOR_LEVEL" class="custom-input custom-input-xs" autocomplete="off" placeholder="Senior Level">
                    <span asp-validation-for="SENIOR_LEVEL" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="SHORT_NAME" class="control-label"></label>
                    <input asp-for="SHORT_NAME" type="text" class="custom-input custom-input-xs" autocomplete="off" placeholder="Short Name">
                    <span asp-validation-for="SHORT_NAME" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="DESIGNATION_NAME" class="control-label"></label>
                    <input asp-for="DESIGNATION_NAME" type="text" class="custom-input custom-input-xs" autocomplete="off" placeholder="Designation">
                    <span asp-validation-for="DESIGNATION_NAME" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="PARENT_ID" class="control-label"></label>
                    <select asp-for="PARENT_ID" asp-items="@(new SelectList(ViewBag.PARENT_ID, "ID", "DESIGNATION_NAME"))" class="custom-input custom-input-xs">
                        <option value="">Select an option</option>
                    </select>
                    <span asp-validation-for="PARENT_ID" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="LOWER_BOUND" class="control-label"></label>
                    <input asp-for="LOWER_BOUND" class="custom-input custom-input-xs" autocomplete="off" placeholder="Lower Bound Salary">
                    <span asp-validation-for="LOWER_BOUND" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="UPPER_BOUND" class="control-label"></label>
                    <input asp-for="UPPER_BOUND" class="custom-input custom-input-xs" autocomplete="off" placeholder="Upper Bound Salary">
                    <span asp-validation-for="UPPER_BOUND" class="text-danger"></span>
                </div>
                <div class="col-md-1">
                    <label asp-for="IS_ACTIVE" class="control-label"></label>
                    <input asp-for="IS_ACTIVE" type="checkbox" class="custom-input custom-input-xs">
                    <span asp-validation-for="IS_ACTIVE" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-sm btn-primary"><i class="fa fa-chevron-left"></i> Back</a>
            <button class="btn btn-sm btn-info" type="reset"><i class="fa fa-undo"></i> Reset</button>
            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Submit</button>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}